<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Restored Books Tree View -->
    <record id="library_restored_bookss" model="ir.ui.view">
        <field name="name">Restored Books</field>
        <field name="model">library.restored.books</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" string="Name" />
                <field name="book_id" string="Book ID"/>
                <field name="category" string="Category" />
                <field name="restored_date"  string="Restore Date"/>
                <field name="student" string="Student" />
            </tree>
        </field>
    </record>

    <!-- Restored Books Form View -->
    <record id="library_restored_books_view_form" model="ir.ui.view">
        <field name="name">Restored Books</field>
        <field name="model">library.restored.books</field>
        <field name="arch" type="xml">
            <form string="Restored Books">
                <sheet>
                    <group>
                        <group>
                            <field name="book_pic" widget="image">Book Picture</field>
                        </group>
                        <group>
                            <field name="name">Name</field>
                            <field name="book_id">Book ID</field>
                            <field name="category">Category</field>
                            <field name="restored_date">Restore Date</field>
                            <field name="student" />
                        </group>
                    </group>    
                </sheet>
            </form>
        </field>
    </record>

</odoo>
